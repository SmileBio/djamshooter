.row
  .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-10.col-sm-offset-1
    .col-lg-8.show_advert_block
      .show_advert_title
        = @advert.title
      .show_advert_price
        |  Цена: 
        = @advert.price
      .show_advert_description
        = @advert.description
      .edit_advert_link
        = link_to "Назад", :back, class:"glyphicon glyphicon-menu-left btn btn-primary"
        = link_to "редактировать", edit_advert_path(@advert), class:"glyphicon glyphicon-pencil btn btn-warning" if current_user &&current_user.id == @advert.user_id
        = link_to "удалить", advert_path(@advert), class:"glyphicon glyphicon-remove-sign btn btn-danger", method: :delete, data: {confirm: "Вы уверены что хотите удалить?"} if current_user && current_user.id == @advert.user_id
    .col-lg-4.show_advert_user_block
      .show_advert_user_email
        span.glyphicon.glyphicon-user
          = @advert.user.email
      .show_advert_user_phone
        span.glyphicon.glyphicon-phone-alt
          = @advert.user.phone
      .show_advert_location
        span.glyphicon.glyphicon-globe
          = "#{@advert.region.title}, #{@advert.city.title}"
      div
        a.btn.btn-primary[href="#"]
          | написать сообщение пользователю
