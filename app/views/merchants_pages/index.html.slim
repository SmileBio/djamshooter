- if @merchants_pages.nil?
  p
    | результатом выборки = нихуяшечки
- else
  .row
    .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
      - @merchants_pages.each do |page|
        .index_company_block
          .index_company_name
            = link_to page.company_name, merchant_path(page)
          .row
            .index_company_image.col-lg-2.col-md-2
              - if page.company_logo.exists?
                = image_tag(page.company_logo.url(:original), class: "index_company_logo")
              - else
                img[src="aaa.jpg" alt="" height="80px" width="70px"]
            .index_company_description.col-lg-10.col-md-10
              = page.description
          .index_company_categories_list
            p
              | категории в каких работает компания
            - page.categories.each do |category|
              .index_company_categories
                button.btn.btn-default[type="button"]
                  = image_tag(category.icon.url(:original), class: "index_company_category_icon")
                  = category.title
